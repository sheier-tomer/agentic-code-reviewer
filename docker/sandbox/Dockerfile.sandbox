FROM python:3.11-slim

WORKDIR /workspace

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --no-cache-dir \
    pytest \
    pytest-cov \
    pytest-asyncio \
    ruff \
    mypy \
    semgrep \
    types-requests \
    types-redis

RUN mkdir -p /workspace/repo

WORKDIR /workspace/repo

CMD ["/bin/bash"]
