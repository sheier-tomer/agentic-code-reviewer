# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=

# Supabase PostgreSQL
# Get connection string from: Supabase Dashboard > Project Settings > Database > Connection string (URI)
# Use pooled connection for serverless/many concurrent connections
DATABASE_URL=postgresql+asyncpg://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres
DATABASE_SYNC_URL=postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# Upstash Redis
# Get connection string from: Upstash Dashboard > [Your Database] > Details > Redis URL
REDIS_URL=redis://default:[PASSWORD]@[ENDPOINT].upstash.io:6379

# Docker Sandbox
DOCKER_SANDBOX_IMAGE=code-reviewer-sandbox:latest
DOCKER_TIMEOUT_SECONDS=300
DOCKER_MEMORY_LIMIT=2g

# Models
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o

# Limits
MAX_FILES_PER_RUN=10
MAX_DIFF_LINES=500
MAX_CONTEXT_TOKENS=50000
MIN_SIMILARITY_THRESHOLD=0.7

# Scoring Thresholds
SCORING_QUALITY_THRESHOLD_APPROVE=80
SCORING_QUALITY_THRESHOLD_REVIEW=60
SCORING_RISK_THRESHOLD_REVIEW=0.3
SCORING_RISK_THRESHOLD_REJECT=0.7
