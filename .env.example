# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=

# Neon PostgreSQL
# Get connection string from: Neon Dashboard > Project > Connection Details
# Use pooled connection for serverless apps, direct connection for long-running processes
DATABASE_URL=postgresql+asyncpg://[user]:[password]@[endpoint].neon.tech/neondb?sslmode=require
DATABASE_SYNC_URL=postgresql://[user]:[password]@[endpoint].neon.tech/neondb?sslmode=require

# Upstash Redis
# Get connection string from: Upstash Dashboard > [Your Database] > Details > Redis URL
REDIS_URL=redis://default:[PASSWORD]@[ENDPOINT].upstash.io:6379

# Docker Sandbox
DOCKER_SANDBOX_IMAGE=code-reviewer-sandbox:latest
DOCKER_TIMEOUT_SECONDS=300
DOCKER_MEMORY_LIMIT=2g

# Models
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o

# Limits
MAX_FILES_PER_RUN=10
MAX_DIFF_LINES=500
MAX_CONTEXT_TOKENS=50000
MIN_SIMILARITY_THRESHOLD=0.7

# Scoring Thresholds
SCORING_QUALITY_THRESHOLD_APPROVE=80
SCORING_QUALITY_THRESHOLD_REVIEW=60
SCORING_RISK_THRESHOLD_REVIEW=0.3
SCORING_RISK_THRESHOLD_REJECT=0.7
